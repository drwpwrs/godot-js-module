{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Godot",
			"type": "process",
			"command": "${command:python.interpreterPath}",
			"args": [
				"${workspaceFolder}/scripts/build_dev.py",
				"${input:gitRef}",
				"--platform",
				"${input:platform}",
				"--arch",
				"${input:arch}"
			],
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": ".",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".",
						"endsPattern": "."
					}
				}
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	],
	"inputs": [
		{
			"id": "gitRef",
			"type": "promptString",
			"description": "Git ref (branch or tag) to clone"
		},
		{
			"id": "platform",
			"type": "pickString",
			"description": "Target platform",
			"options": [
				"default",
				"windows",
				"osx",
				"linux",
				"android",
				"ios",
				"web"
			],
			"default": "default"
		},
		{
			"id": "arch",
			"type": "pickString",
			"description": "Target architecture",
			"options": ["default", "x86_32", "x86_64", "arm32", "arm64"],
			"default": "default"
		}
	]
}
